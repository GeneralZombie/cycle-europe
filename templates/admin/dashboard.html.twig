{% extends '@EasyAdmin/page/content.html.twig' %}

{% block main %}
    <h1 class="mb-5">
        Dashboard
    </h1>

    {% if sanityCheckResultsWithErrors | default %}
        <div class="alert alert-danger mb-4">
            Achtung! Es wurden Probleme gefunden. :(
        </div>

        <table class="table">
            <tbody>
            {% for sanityCheckResult in sanityCheckResultsWithErrors %}
                <tr>
                    <td>
                        {{ sanityCheckResult.entity.__toString }}
                    </td>
                    <td>
                        <ul class="list-unstyled mb-0">
                            {% for error in sanityCheckResult.errors %}
                                <li>{{ error.message }}</li>
                            {% endfor %}
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}

{% endblock %}