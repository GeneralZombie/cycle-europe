{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | {{ tour.title }}{% endblock %}

{% block main %}
    {% include 'components/tour/header.html.twig' with {
        tour: tour,
        gpxTracks: gpxTracks
    } only %}

    {% if tour.images | default %}
        <div class="bg-tertiary pt-1 mb-4">
            <div class="container-fluid container-lg">
                <h2 class="pb-1 m-0">
                    <span class="text-white ps-1 pe-1">Bilder</span>
                </h2>
            </div>
        </div>

        <div class="container-fluid container-lg">
            <div class="row">
                {% for image in tour.images %}
                    <div class="col-12 col-lg-6 col-xl-4">
                        <img src="{{ cloudinary(image, 992) }}" alt="{{ tour.title }}" class="img-fluid mb-4"/>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}



{% endblock %}